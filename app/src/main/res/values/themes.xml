<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="MyTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <!-- TimePickerDialog Theme -->
    <style name="MyTimePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:timePickerStyle">@style/MyTimePicker</item>
    </style>


    <style name="Theme.ClearMind" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">#FDFDFD</item>


        <!-- Customize your theme here. -->
    </style>
</resources>